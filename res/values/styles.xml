<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">    
    <style name="item_buttons_style" parent="android:Widget.ImageButton">
       	<item name="android:background">@color/Transparent</item>
    </style> 
    <style name="date" parent="android:Widget.TextView">
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/LightSkyBlue</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="preview" parent="android:Widget.TextView">
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="title">
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/LightSkyBlue</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="text" parent="android:Widget.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/DimGrey</item>
        <item name="android:background">@drawable/text_background</item>
    </style>
    <style name="texteditor_buttons" parent="@style/item_buttons_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="edit" parent="android:Widget.EditText">
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:minLines">3</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/DimGrey</item>
    </style>
    <style name="main_background" parent="@android:style/Theme.Translucent">
        <item name="android:background">#ffd5d6d7</item>
    </style>
    <style name="zoombutton_style" parent="@style/item_buttons_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#8a8a8a</item>
        <item name="android:textSize">50sp</item>
    </style>
</resources>
